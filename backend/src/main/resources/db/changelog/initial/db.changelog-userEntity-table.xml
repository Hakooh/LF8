<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="alexander.vojtenko"  id="1">
        <preConditions onFail="MARK_RAN">
            <not>
                <sequenceExists sequenceName="userEntity_seq"/>
            </not>
        </preConditions>
        <createSequence sequenceName="userEntity_seq" startValue="2"/>
    </changeSet>

    <changeSet author="alexander.vojtenko" id="2" >
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="USERS"/>
            </not>
        </preConditions>
        <createTable tableName="USERS">
            <column  name="id" type="BIGINT">
                <constraints primaryKey="true" primaryKeyName="pk_user"/>
            </column>
            <column name="first_name"  type="VARCHAR(255)"/>
            <column name="last_name"  type="VARCHAR(255)"/>
            <column name="e_mail" type="VARCHAR(255)"/>
            <column name="day_of_birth"  type="TIMESTAMP"/>
            <column name="gender"  type="VARCHAR(255)"/>
            <column name="password"  type="VARCHAR(255)"/>
            <column name="last_login"  type="DATE"/>
        </createTable>
    </changeSet>
    <changeSet id="3" author="alexander.vojtenko" runOnChange="true">
        <preConditions onFail="MARK_RAN">
            <tableIsEmpty tableName="USERS"/>
        </preConditions>
        <loadUpdateData tableName="USERS"
                        primaryKey="id"
                        file="db/changelog/initial/userEntity-values.csv"
                        separator=","/>
    </changeSet>
</databaseChangeLog>