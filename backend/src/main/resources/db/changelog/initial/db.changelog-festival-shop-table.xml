<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="alexander.vojtenko" id="1" >
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="FESTIVAL_SHOP"/>
            </not>
        </preConditions>
        <createTable tableName="FESTIVAL_SHOP">
            <column  name="festival_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="shop_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="FESTIVAL_SHOP" columnNames="festival_id, shop_id"/>

        <addForeignKeyConstraint baseTableName="FESTIVAL_SHOP"
                                 baseColumnNames="shop_id"
                                 constraintName="fk_shop_id"
                                 referencedTableName="SHOP"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="FESTIVAL_SHOP"
                                 baseColumnNames="festival_id"
                                 constraintName="fk_festival_id"
                                 referencedTableName="FESTIVAL"
                                 referencedColumnNames="id"/>

    </changeSet>
    <changeSet id="2" author="alexander.vojtenko" runOnChange="true">
        <preConditions onFail="MARK_RAN">
            <tableIsEmpty tableName="FESTIVAL_SHOP"/>
        </preConditions>
        <insert tableName="FESTIVAL_SHOP">
            <column name="festival_id" value="1"/>
            <column name="shop_id" value="1"/>
        </insert>
    </changeSet>

</databaseChangeLog>