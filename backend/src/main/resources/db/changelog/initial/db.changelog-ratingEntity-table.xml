<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="alexander.vojtenko"  id="1">
        <preConditions onFail="MARK_RAN">
            <not>
                <sequenceExists sequenceName="ratingEntity_seq"/>
            </not>
        </preConditions>
        <createSequence sequenceName="ratingEntity_seq" startValue="2"/>
    </changeSet>

    <changeSet author="alexander.vojtenko" id="2" >
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="RATING"/>
            </not>
        </preConditions>
        <createTable tableName="RATING">
            <column  name="id" type="BIGINT">
                <constraints primaryKey="true" primaryKeyName="pk_rating"/>
            </column>
            <column name="commentary" type="VARCHAR(255)"/>
            <column name="score" type="FLOAT"/>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="date_of_comment" type="DATE"/>
            <column name="shop_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="RATING"
                                 baseColumnNames="shop_id"
                                 constraintName="fk_rating_shop_id"
                                 referencedTableName="shop"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="RATING"
                                 baseColumnNames="user_id"
                                 constraintName="fk_rating_user_id"
                                 referencedTableName="USERS"
                                 referencedColumnNames="id"/>
    </changeSet>
    <changeSet id="3" author="alexander.vojtenko" runOnChange="true">
        <preConditions onFail="MARK_RAN">
            <tableIsEmpty tableName="RATING"/>
        </preConditions>
        <loadUpdateData tableName="RATING"
                        primaryKey="id"
                        file="db/changelog/initial/ratingEntity-values.csv"
                        separator=","/>
    </changeSet>
</databaseChangeLog>